<div class="container">
  <div class="row justify-content-center mt-5 mb-5 frame">
    <div class="col-sm-6">

      <div class="card">
        <div class="card-header">
          Forgot Your Password
        </div>
        <div class="card-body">

          <%= render 'layouts/messages' %>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :email, "Email:" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <br>
            <div class="actions">
              <%= f.submit "Send a password reset", class: "button_style" %>
            </div>
          <% end %>

        </div>
        <div class="card-footer">
          <div class="row d-flex justify-content-between">

            <div class="col d-flex align-items-center">

              <%- if controller_name != 'sessions' %>
                <%= link_to "Login", new_session_path(resource_name), class: "link" %>
              <% end %>

            </div>
            <div class="col d-flex justify-content-end align-items-center">

              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <%= link_to "Need to register?", new_registration_path(resource_name), class: "link text-right" %>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


