<div class="container">
  <div class="row justify-content-center mt-5 mb-5 frame">
    <div class="col-sm-6">

      <div class="card">
        <div class="card-header">
          Login
        </div>
        <div class="card-body">

          <%= render 'layouts/messages' %>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email, "Email:" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <br>
            <div class="field">
              <%= f.label :password, "Password:" %><br />
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
            <br>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in", class: "button_style" %>
            </div>
          <% end %>

        </div>
        <div class="card-footer">
          <div class="row d-flex justify-content-between">

            <div class="col d-flex align-items-center">

              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link" %>
              <% end %>

            </div>
            <div class="col d-flex justify-content-end align-items-center">

              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <%= link_to "Need to register?", new_registration_path(resource_name), class: "link text-right" %>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

